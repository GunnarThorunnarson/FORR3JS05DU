	    "black":"#000"
	}

/* Dæmi 2: litaupplýsingar */
	{
	    "basicColors":{
	            "red":"#f00",
	            "green":"#0f0",
	            "blue":"#00f",
	            "yellow":"#ff0",
	            "black":"#000"
	     },
	     "softColors":{
	     	  "cyan":"#0ff",
	          "magenta":"#f0f"
	     } 
	}


/* Dæmi 3: JSON data lýsir fylki, hvert item er object með ákv. lit */
{
	"colorsArray":[
		{
			"color": "red",
			"value": "#f00"
		},
		{
			"color": "green",
			"value": "#0f0"
		},
		{
			"color": "blue",
			"value": "#00f"
		},
		{
			"color": "cyan",
			"value": "#0ff"
		}
	]
}
	/* Úttak: gæti verið tafla; röð fyrir hver object í fylki, hvert eigindi verður dálkur. */ 


